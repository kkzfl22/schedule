                <!--任务日志，成功为空，失败时记录下失败信息-->
                <if test=" batchMsg !=  null and '' !=  batchMsg">
                    batch_msg = #{batchMsg,jdbcType=VARCHAR},
                </if>
                <!--批次的开始时间-->
